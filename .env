# LLM API 配置
VUE_APP_LLM_API_URL=https://api.openai.com/v1/chat/completions
VUE_APP_LLM_API_KEY=
VUE_APP_LLM_MODEL_NAME=gpt-3.5-turbo

# 功能开关配置
VUE_APP_WISDOM_COMPANION_ENABLED=true
VUE_APP_AUTO_ANALYSIS_ENABLED=true
VUE_APP_EMOTION_MULTI_SELECT_ENABLED=true

# 界面配置
VUE_APP_MAX_THOUGHT_LENGTH=500
VUE_APP_MAX_ANALYSIS_RETRIES=3

# 调试模式
VUE_APP_DEBUG_MODE=false